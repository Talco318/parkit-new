<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".availableParkingsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/title_availableparking"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/available_parkings"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/locationTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/parking_locationTitle"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/theParkingLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/the_location" />
    </RelativeLayout>

</LinearLayout>